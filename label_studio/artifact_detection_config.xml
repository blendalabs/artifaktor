<View>
  <Header value="AI Video Artifact Detection" />
  <Text name="meta" value="Fast mode: only draw artifact boxes. Ignore body_part/severity unless you really need them." />

  <View style="display:flex; gap:16px; align-items:flex-start;">
    <View style="flex:3; min-width: 70%;">
      <Image name="image" value="$image" zoom="true" rotateControl="true" />
    </View>
    <View style="flex:1; min-width:260px; border:1px solid #ddd; padding:12px; border-radius:8px;">
      <Header value="Hotkeys" />
      <Text name="hotkeys_legend" value="Ctrl+1 = artifact box&#10;No artifact = submit empty&#10;Submit = next frame" />
    </View>
  </View>

  <RectangleLabels name="label" toName="image" showInline="true">
    <Label value="body_distortion" hotkey="ctrl+1" background="#E53935" />
  </RectangleLabels>

  <!-- Kept only for backward compatibility with existing annotations -->
  <Choices name="body_part" toName="image" perRegion="true" whenTagName="label" selection="single" showInline="false">
    <Choice value="face" />
    <Choice value="hair" />
    <Choice value="hand" />
    <Choice value="arm" />
    <Choice value="leg" />
    <Choice value="torso" />
    <Choice value="full_body" />
    <Choice value="other" />
  </Choices>

  <!-- Kept only for backward compatibility with existing annotations -->
  <Choices name="severity" toName="image" perRegion="true" whenTagName="label" selection="single" showInline="false">
    <Choice value="mild" />
    <Choice value="medium" />
    <Choice value="severe" />
  </Choices>
</View>
