<View>
  <Header value="AI Video Artifact Detection" />
  <Text name="meta" value="Draw a box around each distortion, then set body part (and optional severity)." />

  <Image name="image" value="$image" zoom="true" rotateControl="true" />

  <RectangleLabels name="label" toName="image" showInline="true">
    <Label value="body_distortion" hotkey="1" background="#E53935" />
  </RectangleLabels>

  <Choices
    name="body_part"
    toName="image"
    perRegion="true"
    whenTagName="label"
    selection="single"
    showInline="true"
  >
    <Choice value="face" hotkey="f" />
    <Choice value="hair" hotkey="h" />
    <Choice value="hand" hotkey="n" />
    <Choice value="arm" hotkey="a" />
    <Choice value="leg" hotkey="l" />
    <Choice value="torso" hotkey="t" />
    <Choice value="full_body" hotkey="b" />
    <Choice value="other" hotkey="o" />
  </Choices>

  <Choices
    name="severity"
    toName="image"
    perRegion="true"
    whenTagName="label"
    selection="single"
    showInline="true"
  >
    <Choice value="mild" hotkey="q" />
    <Choice value="medium" hotkey="w" />
    <Choice value="severe" hotkey="e" />
  </Choices>
</View>
